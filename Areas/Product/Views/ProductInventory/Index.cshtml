@model  IEnumerable<InventoryManagementsystem.Product_Inventory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Inventory</h2>
<p>
    @Html.ActionLink("Create New Product Inventory", "Create")
</p>

<table class="container">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayName("Available actions")
</tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductInventoryID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductInventoryID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductInventoryID })
            </td>
        </tr>
    }


</table>


